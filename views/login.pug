extends layout

block content
    .vertical-align
        .vertical-align-element
            .container
                .row
                    .col-md-5.mx-auto
                        h3.text-center.text-secondary.font-weight-light Sign-in
                        != messages('message', locals)
                        if errors
                            ul.list-group
                                each error, i in errors
                                    li(class="list-group-item list-group-item-danger") #{error.msg}
                        form(method="POST", action="/user/login")
                            .form-group
                                input.form-control(name="username",type="text",placeholder="username")
                            .form-group
                                input.form-control(name="password",type="password",placeholder="password")
                            input.btn.btn-outline-success.btn-block(type="submit",value="Sign-In")