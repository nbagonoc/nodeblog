extends layout

block content
    .container
        h1 Sign-up
        form(method="POST", action="/user/login")
            .form-group
                label Username:
                input.form-control(name="username",type="text")
            .form-group
                label Password:
                input.form-control(name="password",type="password")
            input.btn.btn-info(type="submit",value="submit")